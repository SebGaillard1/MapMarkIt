<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/poi_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="40"
            android:contentDescription="@string/poi_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/poi_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nom du POI"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/poi_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:text="Type de POI"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/poi_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:text="Adresse du POI"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/poi_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:text="Téléphone du POI"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#666666"/>

        <TextView
            android:id="@+id/poi_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="10dp"
            android:text="Note du POI"
            android:textColor="#666666"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
